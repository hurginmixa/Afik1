# the output of this script is redirected to the right file
# the environment variable TAG is used for the function name and comments
#

#
# Print headers and such.
# 
BEGIN {
    HFILE = sprintf ("%ss.h", ENVIRON["TAG"]);
    CFILE = sprintf ("%ss.c", ENVIRON["TAG"]);
    printf "/* This file generated by mknames.awk do not edit! */\n" > HFILE;

    printf "/* This file generated by mknames.awk do not edit! */\n" > CFILE;
    printf "#include <stdio.h>\n"                                  > CFILE;
    printf "#include <string.h>\n"                                 > CFILE;
    printf "#include \"sizes.h\"\n"                                > CFILE;
    printf "#include \"%s\"\n\n", HFILE                            > CFILE;
    printf "char* get_%s_str(uint16 d)\n", ENVIRON["TAG"]          > CFILE;
    printf "{\n"                                                   > CFILE;
    printf "    char* str = NULL;\n"                               > CFILE;
    printf "    switch(d) {\n"                                     > CFILE;
}

#
# deal with each line if it doesn't start with a '#'
#
/^[^#]/ {
    NAME = ""
    for (i = 3; i < NF + 1; i=i+1) {
        if ( NAME ) {
            NAME = sprintf ("%s %s", NAME, $(i))
        } else {
            NAME = $(i)
        }
    }

    printf "#define %-10s\t%s\t/* %s */\n", $1, $2, NAME           > HFILE;

    printf "    case %s:\n", $1                                    > CFILE;
    printf "        str=strdup(\"%s\");\n", NAME                   > CFILE;
    printf "        break;\n"                                      > CFILE;
}

#
# Finish off the files
#
END {
    printf "extern char* get_%s_str(uint16 d);\n", ENVIRON["TAG"]  > HFILE;

    printf "    default:\n"                                        > CFILE;
    printf "        {\n "                                          > CFILE;
    printf "            char buf[10];\n"                           > CFILE;
    printf "#if (SIZEOF_INT == 4)\n"                               > CFILE;
    printf "            sprintf(buf,\"%%04x\",d);\n"               > CFILE;
    printf "#else\n"                                               > CFILE;
    printf "            sprintf(buf,\"%%04hx\", d);\n"             > CFILE;
    printf "#endif\n"                                              > CFILE;
    printf "            str=strdup(buf);\n"                        > CFILE;
    printf "        }\n"                                           > CFILE;
    printf "        break;\n"                                      > CFILE;
    printf "    }\n"                                               > CFILE;
    printf "    return str;\n"                                     > CFILE;
    printf "}\n"                                                   > CFILE;
}
